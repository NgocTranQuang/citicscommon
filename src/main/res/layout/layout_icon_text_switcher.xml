<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_chooser_height">

        <ImageView
            android:id="@+id/titleImg"
            android:layout_width="@dimen/text_chooser_img_size"
            android:layout_height="@dimen/text_chooser_img_size"
            android:layout_marginStart="5dip"
            android:background="@drawable/background_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_icon_tint" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/vSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin_large"
            android:layout_marginVertical="@dimen/activity_margin_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/titleImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View style="@style/DividerStyle"
            android:id="@+id/lineDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/vSwitch"
            app:layout_constraintStart_toStartOf="@id/titleImg"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>